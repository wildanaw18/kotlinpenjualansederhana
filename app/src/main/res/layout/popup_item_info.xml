<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

<LinearLayout
android:layout_width="300dp"
android:layout_height="wrap_content"
android:background="#FFA7A7"
android:orientation="vertical"
android:padding="16dp"
android:elevation="4dp"
android:layout_gravity="center"
android:layout_margin="24dp"
android:radius="10dp">

<!-- Header dengan tombol tutup -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvModalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Barang"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/kreon_bold" />

    <TextView
        android:id="@+id/btnCloseModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ•"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:paddingEnd="8dp"
        android:clickable="true" />
</RelativeLayout>

<!-- Informasi Barang -->
<TextView
    android:id="@+id/tvKode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Kode:"
    android:textColor="#000000"
    android:textSize="14sp"
    android:fontFamily="@font/kreon_regular"
    android:layout_marginBottom="4dp" />

<TextView
    android:id="@+id/tvNamaBarang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nama Barang:"
    android:textColor="#000000"
    android:textSize="14sp"
    android:fontFamily="@font/kreon_regular"
    android:layout_marginBottom="4dp" />

<TextView
    android:id="@+id/tvHargaBarang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Harga Barang:"
    android:textColor="#000000"
    android:textSize="14sp"
    android:fontFamily="@font/kreon_regular" />
</LinearLayout>
    </RelativeLayout>
